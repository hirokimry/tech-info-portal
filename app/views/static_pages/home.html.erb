<header class="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand"
         href="#">LOGO</a>
      <button class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse"
           id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle"
               href="#"
               id="navbarDropdown"
               role="button"
               data-bs-toggle="dropdown"
               aria-expanded="false">
              登録メディア一覧
            </a>
            <ul class="dropdown-menu"
                aria-labelledby="navbarDropdown">
              <li>
                <%= link_to "#{@media.find(1).name}", @media.find(1).top_url, class:"dropdown-item", target: :_blank %>
              </li>
              <li>
                <%= link_to "#{@media.find(2).name}", @media.find(2).top_url, class:"dropdown-item", target: :_blank %>
              </li>
              <li>
                <%= link_to "#{@media.find(3).name}", @media.find(3).top_url, class:"dropdown-item", target: :_blank %>
              </li>
              <li>
                <%= link_to "#{@media.find(4).name}", @media.find(4).top_url, class:"dropdown-item", target: :_blank %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<div class="container-fluid d-flex flex-column align-items-center">
  <div class="row">
    <ul class="nav nav-pills mb-3"
        id="pills-tab"
        role="tablist">
      <li class="nav-item"
          role="presentation">
        <button class="nav-link active"
                id="pills-new-arrivals-tab"
                data-bs-toggle="pill"
                data-bs-target="#pills-new-arrivals"
                type="button"
                role="tab"
                aria-controls="pills-new-arrivals"
                aria-selected="true">
          新着
        </button>
      </li>
      <li class="nav-item"
          role="presentation">
        <button class="nav-link"
                id="pills-daily-ranking-tab"
                data-bs-toggle="pill"
                data-bs-target="#pills-daily-ranking"
                type="button"
                role="tab"
                aria-controls="pills-daily-ranking"
                aria-selected="false">
          デイリーランキング
        </button>
      </li>
      <li class="nav-item"
          role="presentation">
        <button class="nav-link"
                id="pills-weekly-ranking-tab"
                data-bs-toggle="pill"
                data-bs-target="#pills-weekly-ranking"
                type="button"
                role="tab"
                aria-controls="pills-weekly-ranking"
                aria-selected="false">
          週間ランキング
        </button>
      </li>
      <li class="nav-item"
          role="presentation">
        <button class="nav-link"
                id="pills-monthly-ranking-tab"
                data-bs-toggle="pill"
                data-bs-target="#pills-monthly-ranking"
                type="button"
                role="tab"
                aria-controls="pills-monthly-ranking"
                aria-selected="false">
          月間ランキング
        </button>
      </li>
    </ul>
    <div class="tab-content"
         id="pills-tabContent">
      <%= render "new_articles" %>
      <%= render "daily_ranking" %>
      <%= render "weekly_ranking" %>
      <%= render "monthly_ranking" %>
    </div>
  </div>

  <div class="row">

    <div class="row">
      <div class="col">
        <%= @media.find(1).name %>
        <%= render "specific_media_articles", media_id: 1 %>
      </div>
      <div class="col">
        <%= @media.find(2).name %>
        <%= render "specific_media_articles", media_id: 2 %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= @media.find(3).name %>
        <%= render "specific_media_articles", media_id: 3 %>
      </div>
      <div class="col">
        <%= @media.find(4).name %>
        <%= render "specific_media_articles", media_id: 4 %>
      </div>
    </div>

  </div>

  <footer class="footer">
    <div class="container d-flex flex-column align-items-center">
      <p class="text-muted">
        Copyright © 2022 Hiroki Moriya All rights reserved.</p>
    </div>
  </footer>