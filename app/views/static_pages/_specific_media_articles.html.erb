<div>
  <% @articles.where(medium_id: media_id).order(publication_date: :desc).limit(10).each do |article| %>
  <%= link_to "#{article.title}", article_path(article.id), class:"link-secondary", target: :_blank %>
  <%= "#{article.publication_date.strftime("%m/%d %H:%M").to_s}" %>
  <br>
  <% end %>
</div>