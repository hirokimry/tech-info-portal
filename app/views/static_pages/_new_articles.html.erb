<ul class="tab-pane fade show active"
    id="pills-new-arrivals"
    role="tabpanel"
    aria-labelledby="pills-new-arrivals-tab">
  <% @articles.order(publication_date: :desc).limit(10).each do |article| %>
  <li class="d-flex justify-content-start m-2"
      style="border-bottom: solid 1.5px #593F3F">
    <%= link_to image_tag(@media.find(article.medium_id).logo_path, width: "50%", height: "auto"), article_path(article.id), class:"container d-flex justify-content-center align-self-center p-0 m-0 w-25", target: :_blank %>

    <div class="flex-grow-1 w-75">
      <%= link_to "#{article.title}", article_path(article.id), class:"link-secondary", target: :_blank, id:"article_link"%>
      <div class="d-flex justify-content-end align-items-center">
        <p class="small m-2"><%= @media.find(article.medium_id).name %></p>
        <p class="small fw-lighter text-secondary m-2"><%= "#{article.publication_date.strftime("%m/%d %H:%M").to_s}" %>
        </p>
      </div>
    </div>
  </li>
  <% end %>
</ul>